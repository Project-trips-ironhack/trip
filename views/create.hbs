                        </div>
                    </div>

                    <div class="field">
                        <label class="label">City</label>
                        <div class="control">
                            <div class="select">
                                <select id="travelCity1Tab">
                                    {{#each allCities}}
                                    <option value="{{this._id}}">{{this.name}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>
                    
                    </div>
                    <div class="field">
                        <label class="label">Description</label>
                        <div class="control">
                            <textarea id="travelDescription1Tab" class="textarea"
                                placeholder="Describe you plan here"></textarea>
                        </div>
                    </div>


                    <div class="field">
